def count_upper_lower(string1):
    upper_count = 0
    lower_count = 0
    for char in string1:
        if char.isupper():
            upper_count += 1
        elif char.islower():
            lower_count += 1
    print("No. of Upper case characters : %d \nNo. of Lower case Characters : %d " %(upper_count, lower_count))


temp = input("Enter a String : ")       
count_upper_lower(temp)

#Sample String : 'The quick Brow Fox'
#Expected Output :
#No. of Upper case characters : 3
#No. of Lower case Characters : 12
